<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/Black</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorSecondary">@color/Black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColorHint">@color/LightGrey</item>
    </style>


    <!-- Dark TV Background Theme -->
    <style name="DarkTVTheme.Title" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/Transparent</item>
        <item name="android:textColorPrimary">@color/White</item>
        <item name="android:textColorSecondary">@color/LightGrey</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <!-- Light TV Background Theme -->
    <style name="LightTVTheme.Title" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/Transparent</item>
        <item name="android:textColorPrimary">@color/Black</item>
        <item name="android:textColorSecondary">@color/LightGrey</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <!-- Edit Text Change to black on focus and error functionality theme -->
    <style name="CustomEditTextTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:background">@drawable/multipurpose_edit_text</item>
        <item name="android:textColorPrimary">@color/Black</item>
        <item name="android:textColorSecondary">@color/LightGrey</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorHint">@color/LightGrey</item>
    </style>


    <!-- Dark Toolbar Theme -->
    <style name="ToolbarTransparentTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/Transparent</item>
        <item name="android:textColorPrimary">@color/Black</item>
        <item name="android:textColorSecondary">@color/LightGrey</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <!-- Semi-Transparent Toolbar Theme -->
    <style name="ToolbarColoredTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/LightGrey</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- SearchView Theme -->
    <style name="CustomSearchViewTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/Transparent</item>
        <item name="android:textColorPrimary">@color/Black</item>
        <item name="android:textColorSecondary">@color/LightGrey</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textColorHint">@color/LightGrey</item>
        <item name="android:editTextColor">@color/Black</item>
        <item name="android:editTextBackground">@color/White</item>
    </style>

    <!-- Switch Theme -->
    <style name="CustomSwitchTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:switchTextOn">Enabled</item>
        <item name="android:switchTextOff">Disabled</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@color/LightGrey</item>
        <item name="android:switchPreferenceStyle">@style/Base.TextAppearance.AppCompat.Widget.Switch</item>
    </style>

    <!-- For a transparent dialog -->
    <style name="CustomTransparentDialog" parent="AppTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/Transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/Transparent</item>
    </style>

</resources>
