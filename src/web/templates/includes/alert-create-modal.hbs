<div class="modal fade" tabindex="-1" id="alertCreate" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Alert Title</h4>
            </div>
            <form action="event.html" data-toggle="validator" role="form">
                <div class="modal-body">
                    <div class="alert-create">
                            <div class="form-group">
                                <label>Alert Title</label><br />
                                <input type="text" class="form-control" required  id="alerttitle"/>
                            </div>
                            <div class="form-group">
                                <label>Alert Type</label><br />
                                <input type="text" class="form-control" required  id="alerttype"/>
                            </div>
                            <div class="form-group">
                                <label>City or Zip</label><br />
                                <input type="text" class="form-control" required  id="alertcityzip"/>
                            </div>
                            <div class="form-group">
                                <label>Non-Public Interagency Information</label><br />
                                <textarea class="form-control" required id="alertinteragencyinfo"></textarea>
                            </div>
                            <div class="form-group">
                                <label>Public Announcement</label>
                                <textarea class="form-control" required id="alertpublicannouncement"></textarea>
                            </div>
                    </div>
                </div>
                <div class="modal-footer text-right">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary submit" id="btnSaveAlert">Save &amp; Send Alert</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
