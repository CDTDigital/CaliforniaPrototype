<div class="container-table">
    <div class="row vertical-center-row">
        <div class="login">
            <h1>Account Recovery</h1>
            <p>
                To reset your password, please enter your email address below.
            </p>
            <form action="accountrecovery-sent.html" data-toggle="validator" role="form">
                <div class="form-group">
                    <label>Email Address</label>
                    <input type="text" class="form-control" placeholder="email"  data-error="Please enter a valid email address." required>
                    <div class="help-block with-errors"></div>
                </div>
                <button type="button" class="btn btn-primary btn-block submit">Continue</button>
            </form>
        </div>
    </div>
</div>
