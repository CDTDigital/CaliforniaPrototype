<div class="container-table">
    <div class="row vertical-center-row">
      <div class="user-reg col-md-4 col-md-offset-4">
        <h3>User Log In</h3>
        <form data-toggle="validator" role="form">
          <div class="form-group">
            <label>Email Address</label>
            <input type="text" class="form-control" placeholder="email" id="username" required />
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" placeholder="password" id="password" required />
          </div>
          <button type="button" class="btn btn-primary btn-block submit" id="loginbtn">Log in</button>
        </form>
        <p>
              <a href="accountrecovery.html">Click here if you have trouble logging in</a>
            </p>
      </div>
    </div>
  </div>
