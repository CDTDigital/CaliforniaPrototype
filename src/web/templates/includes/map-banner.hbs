        {{#if loggedin}}
            <form data-toggle="validator" role="form">
                <div class="row vertical-center" id="phoneNotifications">
                    <div class="col-md-6">
                        <h3>Get Notifications By Phone</h3>
                        <p>
                            To receive real-time emergency notifications and updates via SMS text messages, please enter your mobile phone number.
                        </p>
                        <p class="text-muted">
                            <i class="small">*message and data rates may apply.</i>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Enter Your Phone Number</label>
                                    <input type="text" class="form-control phone" placeholder="888-888-8888" data-minlength="12" required />
                                    <span class="text-muted">Example: 888-888-8888</span>
                                </div>
                            </div>
                            <div class="col-sm-6"><button type="button" class="btn btn-primary btn-block submit">Add My Phone Number</button></div>
                        </div>
                    </div>
                </div>
            </form>
